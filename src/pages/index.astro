---
import Layout from '../layouts/Layout.astro';
import Recordings from '../components/Recordings.tsx';
import { getCollection } from 'astro:content';

const recordingsCollection = await getCollection('recordings');
const recordings = recordingsCollection.map(entry => entry.data);
---

<Layout title="Coxswain Recordings | Rowing Race Audio from Henley & World Championships">
  <Recordings recordings={recordings} client:load />
</Layout>
